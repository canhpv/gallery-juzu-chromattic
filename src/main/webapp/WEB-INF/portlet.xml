<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

  <portlet>
    <description xml:lang="EN">The Juzu Gallery Portlet allows you to display and manage images</description>
    <portlet-name>JuzuGalleryPortlet</portlet-name>
    <display-name>JuzuGallery Portlet</display-name>
    <portlet-class>juzu.portlet.JuzuPortlet</portlet-class>   
    <init-param>
      <name>root-node-path</name>
      <value>/juzugallery</value>
    </init-param>
    <init-param>
      <name>workspace-name</name>
      <value>portal-system</value>
    </init-param>    
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>edit</portlet-mode>
    </supports>
    <supported-locale>en</supported-locale>
    <portlet-info>
      <title>Juzu Gallery</title>
      <short-title>Juzu Gallery</short-title>
      <keywords>System</keywords>
    </portlet-info>
  </portlet>

</portlet-app>